{
    "cleanUrls": true,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/(login|register|dashboard|admin|store|setup-store|logout)",
            "destination": "/api/$1.php"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "env": {
        "DB_CONNECTION": "pgsql"
    }
}